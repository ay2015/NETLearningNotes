<Window x:Class="ControlConsole.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlConsole"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock x:Name="tb_status"></TextBlock>
            <TextBox Width="300" x:Name="tb_content"></TextBox>
            <Button Content="回调客户端"  Click="Button_Click" Height="30" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
